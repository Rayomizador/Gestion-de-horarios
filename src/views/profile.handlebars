<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Perfil de {{user.first_name}} {{user.last_name}}</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Email:</strong> {{user.email}}</p>
                        <p><strong>Edad:</strong> {{user.age}} años</p>
                        <p><strong>Rol:</strong> {{user.role}}</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Configuración Horaria</h5>
                        {{#if user.configuracion_horaria}}
                            <p><strong>Horas semanales:</strong> {{user.configuracion_horaria.horas_semanales}}h</p>
                            <p><strong>Turno:</strong> {{user.configuracion_horaria.turno}}</p>
                            <p><strong>Fecha contratación:</strong> {{user.configuracion_horaria.fecha_contratacion}}</p>
                        {{else}}
                            <p class="text-muted">Sin configuración horaria</p>
                        {{/if}}
                    </div>
                </div>

                <hr>

                <h5>Días de Descanso Fijos</h5>
                {{#if user.dias_descanso}}
                    {{#if user.dias_descanso.length}}
                        <ul class="list-group list-group-flush">
                            {{#each user.dias_descanso}}
                                <li class="list-group-item">{{this}}</li>
                            {{/each}}
                        </ul>
                    {{else}}
                        <p class="text-muted">No tienes días de descanso fijos asignados.</p>
                    {{/if}}
                {{else}}
                    <p class="text-muted">No tienes días de descanso fijos asignados.</p>
                {{/if}}

                <div class="mt-4">
                    <a href="/horarios" class="btn btn-primary">Ver Mis Horarios</a>
                    <a href="/horarios/nuevo" class="btn btn-success">Crear Nuevo Horario</a>
                </div>
            </div>
        </div>
    </div>
</div>